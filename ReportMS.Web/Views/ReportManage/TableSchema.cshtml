@using ReportMS.DataTransferObjects.Dtos
@model IEnumerable<TableSchemaDto>

<div>
    <div id="table_schema">
        @if (Model.HasAny())
        {
            <table id="schema_table" class="table table-bordered table-striped table-hover">
                <thead>
                <tr>
                    <th>
                        <input type="checkbox" onclick="toggleCheckColumns()"/> Select All
                    </th>
                    <th>No.</th>
                    <th>ColunmName</th>
                    <th>TableSchema</th>
                    <th>OriginalDataType</th>
                    <th>DataType</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="fields" value="@item.ColunmName"/>
                        </td>
                        <td>@Html.DisplayFor(m => item.OrdinalPosition)</td>
                        <td>@Html.DisplayFor(m => item.ColunmName)</td>
                        <td>@Html.DisplayFor(m => item.TableSchema)</td>
                        <td>@Html.DisplayFor(m => item.OriginalDataType)</td>
                        <td>@Html.DisplayFor(m => item.DataType)</td>
                    </tr>
                }
                </tbody>
            </table>
        }
    </div>
</div>