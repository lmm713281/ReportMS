<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Report Manager System" />
    <title>@ViewBag.Title - RMS</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/jqueryui")
    @Styles.Render("~/Content/data_tables")
    @Styles.Render("~/bundles/startupui")
    @RenderSection("styles", false)

    @Scripts.Render("~/bundles/esShim")
    @Scripts.Render("~/bundles/react")
</head>
<body>
    <header>
        @Html.Partial("_Layout_Header")
    </header>

    <div class="main-content-wrapper">
        <div class="main-content @ViewBag.ScreenWide">
            @RenderBody()
        </div>
    </div>

    <footer>
        @Html.Partial("_Layout_Footer")
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/dataTables")
    @Scripts.Render("~/bundles/menu")
    @Scripts.Render("~/bundles/startup")
    @RenderSection("scripts", false)

    <section>
        @Html.Partial("_Layout_Miscellaneous")
    </section>
</body>
</html>
