@using ReportMS.DataTransferObjects.Dtos
@model ActionsDto

<div>
   @using (Html.BeginForm(null, null, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
   {
       @Html.AntiForgeryToken()
       <div class="form-group">
           @Html.LabelFor(m => m.Area, new {@class = "col-md-3 control-label"})
           <div class="col-md-9">
               @Html.TextBoxFor(m => m.Area, new {@class = "form-control", data_format = "string", maxlength = "40", onpaste = "return false;"})
           </div>
       </div>
       <div class="form-group">
           @Html.LabelFor(m => m.Controller, new {@class = "col-md-3 control-label"})
           <div class="col-md-9">
               @Html.TextBoxFor(m => m.Controller, new {@class = "form-control", required = "", data_format = "string", maxlength = "40", onpaste = "return false;"})
           </div>
       </div>
       <div class="form-group">
           @Html.LabelFor(m => m.Action, new {@class = "col-md-3 control-label"})
           <div class="col-md-9">
               @Html.TextBoxFor(m => m.Action, new {@class = "form-control", required = "", data_format = "string", maxlength = "40", onpaste = "return false;"})
           </div>
       </div>
       <div class="form-group">
           @Html.LabelFor(m => m.Description, new {@class = "col-md-3 control-label"})
           <div class="col-md-9">
               @Html.TextAreaFor(m => m.Description, new {@class = "form-control", maxlength = "100"})
           </div>
       </div>
       <div class="form-group">
           <div class="col-md-offset-3 col-md-9">
               <input type="submit" value="Submit" class="btn btn-primary"/>
           </div>
           @Html.HiddenFor(m => m.ID)
       </div>
   }
</div>

